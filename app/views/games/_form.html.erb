<%= form_tag("/games/#{@game.try(:[], 'id')}", method: (@game ? :put: :post)) do %>
  <div class="field">
    <%= label_tag :category_id, 'Category Id:' %>
    <%= text_field_tag :category_id, @game.try(:[], 'category_id') || params[:category_id] %>
  </div>

  <div class="field">
    <%= label_tag :title %>
    <%= text_field_tag :title, @game.try(:[], 'title') %>
  </div>

  <div class="field">
    <%= label_tag :description %>
    <%= text_field_tag :description, @game.try(:[], 'description') %>
  </div>

  <div class="field">
    <%= label_tag :author %>
    <%= text_field_tag :author, @game.try(:[], 'author') %>
  </div>

  <div class="field">
    <%= label_tag :status %>
    <%= number_field_tag :status, @game.try(:[], 'status') %>
  </div>

  <div class="actions">
    <% if @game %>
      <%= submit_tag 'Update Game' %>
    <% else %>
      <%= submit_tag 'Create Game' %>
    <% end %>
  </div>
<% end %>