<%= form_tag '/games', method: :get do %>
  <%= label_tag :search_tag, 'Search Games' %>
  <%= text_field_tag :search_tag %>
  <%= submit_tag 'Search' %>
<% end %>

<h1>Categories</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="categories">
    <% @categories.each do |category| %>
      <tr class="category">
        <td><%= category['name'] %></td>
        <td><%= link_to 'Show', category_path(id: category['id']) %></td>
        <td><%= link_to 'Destroy', category_path(id: category['id']), method: :delete %></td>
        <td><%= link_to 'Download', category_path(id: category['id'], format: :zip) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>