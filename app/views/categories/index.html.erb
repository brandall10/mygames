
<h1>Categories</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category['name'] %></td>
        <td><%= link_to 'Show', category_path(id: category['id']) %></td>
        <td><%= link_to 'Destroy', category_path(id: category['id']), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>