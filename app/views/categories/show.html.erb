<h1><%= @category['name']%></h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Game Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category['games'].each do |game| %>
      <tr class='game'>
        <td><%= game['title'] %></td>
        <td><%= link_to 'Show', game_path(id: game['id']) %></td>
        <td><%= link_to 'Edit', edit_game_path(id: game['id']) %></td>
        <td><%= link_to 'Destroy', game_path(id: game['id'], category_id: @category['id']), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path(category_id: @category['id']) %>
<%= link_to 'Back', categories_path %>